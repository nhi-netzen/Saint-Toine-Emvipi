def update_status():
    """
    H√†m n√†y ch·∫°y li√™n t·ª•c trong m·ªôt lu·ªìng ri√™ng (thread)
    - G·ª≠i y√™u c·∫ßu GET ƒë·∫øn ESP32 ƒë·ªÉ l·∫•y d·ªØ li·ªáu JSON t·∫°i /status
    - C·∫≠p nh·∫≠t th√¥ng tin nhi·ªát ƒë·ªô, ƒë·ªô ·∫©m, ƒë·ªô ·∫©m ƒë·∫•t, m∆∞a, b∆°m, servo
    """
    while True:
        try:
            # G·ª≠i request ƒë·∫øn ESP32
            r = requests.get(f"http://{ESP32_IP}/status", timeout=2)
            data = r.json()  # Nh·∫≠n ph·∫£n h·ªìi JSON t·ª´ ESP32


            # C·∫≠p nh·∫≠t c√°c bi·∫øn hi·ªÉn th·ªã tr√™n giao di·ªán
            temp_var.set(f"{data['temp']} ¬∞C")
            soil_var.set(f"{data['soil']} %")
        except Exception as e:
            # Khi m·∫•t k·∫øt n·ªëi ho·∫∑c ESP32 kh√¥ng ph·∫£n h·ªìi
            temp_var.set(" Kh√¥ng th·ªÉ k·∫øt n·ªëi ESP32")
            soil_var.set("")
        # C·∫≠p nh·∫≠t m·ªói 2 gi√¢y m·ªôt l·∫ßn
        time.sleep(2)


